{
  "manifest_version": 3,
  "name": "AccessiScan Chrome Extension",
  "description": "Scan your projects and see how to improve its accessibility.",
  "version": "1.1",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "permissions": ["activeTab", "scripting", "identity", "storage", "cookies"],
  "host_permissions": ["https://github.com/*", "https://accessiscan.vercel.app/*"],
  "oauth2": {
    "client_id": "Ov23licgT5DhZLZE1spq",
    "scopes": ["user"] 
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scan.mjs"]
    }
  ]
}
